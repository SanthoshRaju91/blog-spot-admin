<div class="panel panel-default book-panel">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-3 col-sm-3 img-section">
        <a href="{{data.url}}" target="_blank">
          <img src="{{data.img}}" width="120" height="120" alt="{{data.name}}"/>
        </a>
      </div>
      <div class="col-md-9 col-sm-9 description">
        <h4>{{data.name}}</h4>
        <hr>
        <p>
          {{data.description}}
        </p>
        <span class="author-section">
          <span>Author:</span> {{data.author}}
        </span>
      </div>
    </div>
  </div>
</div>
