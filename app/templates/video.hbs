<section class="video">
  <div class="row">
    <div class="col-md-6 add-block">
      <h4>Share Video Block</h4>
      <hr/>

      <div class="form-horizontal">
        <div class="form-group">
          <div class="col-sm-8">
            {{input type="text" value=header class="form-control" placeholder="Enter Header"}}
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-8">
            {{textarea value=summary class="form-control" placeholder="Enter Summary"}}
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-6">
            {{input type="text" value=url class="form-control" placeholder="Enter URL"}}
          </div>
          <div class="col-sm-6">
            <iframe frameborder="0" height="150" width="250" allowfullscreen="allowfullscreen" mozallowfullscreen="mozallowfullscreen" msallowfullscreen="msallowfullscreen" oallowfullscreen="oallowfullscreen" webkitallowfullscreen="webkitallowfullscreen" src="{{computedUrl}}"></iframe>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" {{action "shareVideo"}}>Share</button>
            <input type="reset" value="Clear" class="btn btn-danger">
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6 list-block">
      {{#if model}}
        {{#each model as |data|}}
          {{video-panel data=data editVideo=(action 'editCurrentVideo')}}
        {{/each}}
      {{else}}
        <div class="no-data text-center">
          <h2>No Cool Video's for now.</h2>
        </div>
      {{/if}}
    </div>
  </div>
</section>
