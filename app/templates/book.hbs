<section class="books">
  <div class="row">
    <div class="col-sm-6 add-block">
      <h4>Share a Book</h4>
      <hr/>

      <div class="form-horizontal">
        <div class="form-group">
          <div class="col-sm-8">
            {{input type="text" value=name class="form-control" placeholder="Enter Book Name"}}
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-8">
            {{input type="text" value=description class="form-control" placeholder="Enter Book Description"}}
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-8">
            {{input type="text" value=author class="form-control" placeholder="Enter Book Author"}}
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-8">
          {{input type="text" value=url class="form-control" placeholder="Enter Download URL"}}
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-6">
            {{input type="text" value=img class="form-control" placeholder="Enter Book Image"}}
          </div>
          <div class="col-sm-6">
            <img alt="Book Image" src="{{img}}" width="100" height="100">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" {{action "shareBook"}}>Share</button>
            <input type="reset" value="Clear" class="btn btn-danger">
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      {{#if model}}
        {{#each model as |data|}}
          {{book-panel data=data}}
        {{/each}}
      {{else}}
        <div class="no-data text-center">
          <h2>No Cool Resources for now.</h2>
        </div>
      {{/if}}
    </div>
  </div>
</section>
